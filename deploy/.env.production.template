# Phase 2 Production Environment Configuration Template
# Copy this to .env and fill in your actual values

# Phase 2 Configuration
PHASE2_START_DATE=2025-01-25T00:00:00Z

# Server Configuration
PORT=8000
SESSION_TTL_IN_MINUTES=1440
PRODUCTION=true
FRONTEND_URL=https://your-production-domain.com

# Database Configuration (Production)
DATABASE_URL=postgresql://username:password@your-production-db:5432/snakeai_prod
DATABASE_MAX_CONNECTIONS=20
POSTGRES_USER=username
POSTGRES_PASSWORD=strong_password_here
POSTGRES_DB=snakeai_prod

# Twitter/X API Configuration
TWITTER_OAUTH_CLIENT_ID=your_production_twitter_client_id
TWITTER_OAUTH_CLIENT_SECRET=your_production_twitter_client_secret
TWITTER_OAUTH_CALLBACK_URL=https://your-production-domain.com/api/v1/callback
TWITTER_BEARER_TOKEN=your_production_twitter_bearer_token
TWITTER_API_KEY=your_production_twitter_api_key
TWITTER_API_KEY_SECRET=your_production_twitter_api_key_secret
TWITTER_ACCESS_TOKEN=your_production_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_production_twitter_access_token_secret

# Solana Configuration (Mainnet)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
BACKEND_WALLET_PRIVATE_KEY=your_mainnet_wallet_private_key
TOKEN_MINT=your_mainnet_token_mint_address
PROGRAM_ID=your_deployed_program_id

# Job Scheduling
TWITTER_JOB_SCHEDULE="0 */5 * * * *"  # Every 5 minutes
SOLANA_JOB_SCHEDULE="0 */10 * * * *"  # Every 10 minutes

# Specific Configuration
PLAY_SNAKE_AI_id=your_production_twitter_id

# Security (Generate strong values)
JWT_SECRET=your_very_long_and_secure_jwt_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Frontend Configuration
REACT_APP_API_URL=https://your-production-domain.com
REACT_APP_PHASE2_ENABLED=true
REACT_APP_SOLANA_NETWORK=mainnet-beta
